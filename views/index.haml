%html
  %head
    %title What would Shakespeare say?
    %link{:href => "/css/screen.css", :media => "screen, projection", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/css/print.css", :media => "print", :rel => "stylesheet", :type => "text/css"}/
    %script{src: "http://code.jquery.com/jquery-1.8.2.js"}
    %script{src: "http://code.jquery.com/ui/1.9.0/jquery-ui.js"}
    %script{src: "/js/application.js"}
    /[if IE]
      <link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
  %body
    .container
      %h1 What would Shakespeare say?
      %form{:action => '/find', :method => 'post'}
        .elements
          %input{id: "query", name: 'query', type: "text", value: "all is mended"}/
          %button Find
      %ul.results
        - @results.each do |result|
          %li.result
            .quote
              = result[:quote]
            .title
              = result[:title]
            .reference
              = result[:reference]

 
